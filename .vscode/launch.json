{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			/* Runs the compiled version of the currently open TS file, assuming the compiled JS is in the same directory. */
			"args": [
				"--timeout",
				"999999",
				"--colors",
				"${fileDirname}\\${fileBasenameNoExtension}.js"
				// Note to self: this is a very useful reference: https://code.visualstudio.com/docs/editor/variables-reference
			],
			"internalConsoleOptions": "openOnSessionStart",
			"name": "Mocha (same folder)",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			/*
			Runs the compiled version of the currently open TS file, assuming the compiled JS is in the `compiled` subfolder.
			Example: if you had open the file "folder-name/file-name.ts", this would run "compiled/folder-name/file-name.js".
			*/
			"args": [
				"--timeout",
				"999999",
				"--colors",
				"${fileWorkspaceFolder}\\compiled\\${relativeFileDirname}\\${fileBasenameNoExtension}.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"name": "Mocha (`compiled` folder)",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
	]
}
